{
  "expo": {
    "name": "The Story of Us",
    "slug": "the-story-of-us",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FDFBF8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.storyofus.app",
      "infoPlist": {
        "NSCameraUsageDescription": "The Story of Us needs access to your camera to capture photos of precious moments.",
        "NSPhotoLibraryUsageDescription": "The Story of Us needs access to your photo library to select and save memories."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FDFBF8"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.storyofus.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
